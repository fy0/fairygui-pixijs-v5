{
    "compilerOptions": {
        "module": "system",
        "target": "es5",
        "declaration": true,
        "sourceMap": false,
        "removeComments": true,
        "outFile": "./fairygui.js",
        "lib": [
            "es6",
            "dom",
            "es2015.promise"
        ],
        "strict": false,
        "strictNullChecks": false,
        "skipLibCheck": true,
        "typeRoots": [
          "src/types"
        ]
    },
    "include": [
        "src",
        "typings"
    ],
    "exclude": [
        "node_modules/**",
        "demo"
    ]
}